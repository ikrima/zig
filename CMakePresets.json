{
  "version": 3,
  "configurePresets": [
    {
      "name":           "compiler-base",
      "hidden":         true,
      "cacheVariables": {
        "CMAKE_PREFIX_PATH": "${workspaceFolder}/zig-llvm"
      }
    },
    {
      "name":           "clangcl",
      "hidden":         true,
      "environment":    { "PATH": "$penv{PATH};$penv{EDEV_LLVM_INSTLDIR}/bin" },
      "inherits":       ["compiler-base"],
      "generator":      "Ninja",
      "vendor":         { "microsoft.com/VisualStudioSettings/CMake/1.0": { "intelliSenseMode": "windows-clang-x64", "hostOS": [ "Windows" ] } },
      "architecture":   { "value": "x64",        "strategy": "external" },
      "toolset":        { "value": "ClangCl",    "strategy": "external" },
      "cacheVariables": {
        "CMAKE_C_COMPILER":   "$penv{EDEV_LLVM_INSTLDIR}/bin/clang-cl.exe",
        "CMAKE_CXX_COMPILER": "$penv{EDEV_LLVM_INSTLDIR}/bin/clang-cl.exe",
        "CMAKE_LINKER":       "$penv{EDEV_LLVM_INSTLDIR}/bin/lld-link.exe"
       }
    },
    {
      "name":           "msvc",
      "hidden":         true,
      "inherits":       ["compiler-base"],
      "generator":      "Ninja",
      "vendor":         { "microsoft.com/VisualStudioSettings/CMake/1.0": { "intelliSenseMode": "windows-msvc-x64", "hostOS": [ "Windows" ] } },
      "architecture":   { "value": "x64",      "strategy": "external" },
      "toolset":        { "value": "host=x64", "strategy": "external" },
      "cacheVariables": {
        "CMAKE_C_COMPILER":         "cl",
        "CMAKE_CXX_COMPILER":       "cl",
        "CMAKE_CXX_FLAGS":          "/DWIN32 /D_WINDOWS /MT /EHs-c- /D_HAS_EXCEPTIONS=0 /GR- /D_ITERATOR_DEBUG_LEVEL=0",
        "CMAKE_C_FLAGS":            "/DWIN32 /D_WINDOWS /MT /EHs-c- /D_HAS_EXCEPTIONS=0 /GR- /D_ITERATOR_DEBUG_LEVEL=0",
        "CMAKE_CXX_FLAGS_DEBUG":    "/DWIN32 /D_WINDOWS /MT /EHs-c- /D_HAS_EXCEPTIONS=0 /GR- /D_ITERATOR_DEBUG_LEVEL=0",
        "CMAKE_C_FLAGS_DEBUG":      "/DWIN32 /D_WINDOWS /MT /EHs-c- /D_HAS_EXCEPTIONS=0 /GR- /D_ITERATOR_DEBUG_LEVEL=0"
      }
    },

    {
      "name": "dbg",
      "hidden": true,
      "binaryDir": "${workspaceFolder}/bld/dbg",
      "installDir": "${workspaceFolder}/instl/dbg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
      }
    },
    {
      "name": "rel",
      "hidden": true,
      "binaryDir": "${workspaceFolder}/bld/rel",
      "installDir": "${workspaceFolder}/instl/rel",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_MSVC_RUNTIME_LIBRARY": "MultiThreaded"
      }
    },

    { "name": "zig-dbg-ccl",     "inherits": [ "clangcl",    "dbg" ] },
    { "name": "zig-rel-ccl",     "inherits": [ "clangcl",    "rel" ] },
    { "name": "zig-dbg-msvc",    "inherits": [ "msvc",       "dbg" ] },
    { "name": "zig-rel-msvc",    "inherits": [ "msvc",       "rel" ] }
  ],

  "buildPresets": [
    { "name": "zig-dbg-msvc", "configurePreset": "zig-dbg-msvc",   "inheritConfigureEnvironment": true }

  ]
}
