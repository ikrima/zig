{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label":   "build-stage1-singleThreaded",
      "group":   { "kind": "build", "isDefault": true },
      "type":    "shell",
      "command": "${workspaceFolder}/bootstrap.ps1",
      "options": {
        "shell": { "executable": "pwsh.exe" },
        "cwd": "${workspaceFolder}",
      },
      "args": [
        "-singleThreaded",
      ],
      "presentation": {
        "echo":             true,
        "reveal":           "always",
        "focus":            false,
        "panel":            "shared",
        "showReuseMessage": false,
        "clear":            false,
      },
    }
  ]
}